    private void player1ButtonActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
        resetFlags();
        flag1 = true;
    }                                             

    private void player3ButtonActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
        resetFlags();
        flag3 = true;
    }                                             

    private void menuName1ActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        String newName = JOptionPane.showInputDialog(this, "Type in new name:");
        player1.setName(newName);
        player1Button.setText(player1.getName());
        menuName1.setText(newName);
    }                                         

    private void scoreActionPerformed(java.awt.event.ActionEvent evt) {                                      
        // TODO add your handling code here:
        if (flag1 == true){
            player1.setScore(player1.getScore() + 1);
            System.out.println("player1 " + player1.getScore());
        }else if(flag3 == true){
            player3.setScore(player3.getScore() + 1);
            System.out.println("player3 " + player3.getScore());
        }
    }                                     

    /**
     * @param args the command line arguments
     */
    
    public void resetFlags(){
        flag1 = false;
        flag3 = false;
    }
    
